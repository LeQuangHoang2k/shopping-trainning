Table "users" {
  "id" int [pk, increment]
  "facebook_id" int
  "google_id" int
  "email" varchar(255)
  "name" varchar(255)
  "phone" varchar(255)
  "picture" varchar(255)
  "password" varchar(255)
  "address" text
  "role" varchar(255)
  "created_at" datetime
  "updated_at" datetime
}

